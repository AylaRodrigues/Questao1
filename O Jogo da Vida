#include <stdio.h>
#include <stdlib.h>
#include <Windows.h>
#include <locale.h>

int main()
{
	setlocale (LC_ALL, "");
	
	char start;
	int geracoes, quadrado[30][30];
	
	int x,y; //linha e coluna
	
	printf("Para inicialização randomica digite 'r', para selecionar as célular digite 'c'\n");
	scanf("%c", &start);
	
	printf("Quantas gerações você quer ver?\n");
	scanf("%d", &geracoes);
	
	//deixando todos os espaços neutros
	for(int i = 0; i < 30; i++)
		{
			for(int j = 0; j< 30; j++)
			{
				quadrado[i][j] = 0;
			}
		}
		
	//opção randomica
	if (start== 'r')
	{	
		int espacos;
		printf("Quantas células vivas?\n");
		scanf("%d", &espacos);
		
		for(int i = 0; i <= espacos; i++)
		{
			x= rand() %29;
			y= rand() %29;
			quadrado[x][y]=1;
		}
		
	}
	else 
	{
		//opção de escolha
		printf("Digite as cordenadas das células vivas\n");
		while(x != -1 && y != -1)
		{
			scanf("%d %d",&x,&y);
			quadrado[x-1][y-1] = 1;
		}
	
	}
	
	//printar o tabuleiro
	for(int y = 0; y < 30; y++)
	{
		for(int z = 0; z < 30; z++)
		{
			if(quadrado[y][z] == 1)
			{
				printf("0");
			}else if(quadrado[y][z] == 0)
			{
				printf(" ");
			}
				
		}
		printf("\n");
	}
	
	
	for(int i=0; i<geracoes; i++)
	{
		Sleep(1000);
		system("cls");
		for(int x=0; x<30; x++)
		{
			for(int y=0; y<30; y++)
			{
				//calcular se a célula viva morre
				if(quadrado[x][y]==1)
				{
					
				}
				//calcular se a célula morta nasce
				else
				{
					
				}
			}	
		}
		
		//imprimir novo tabuleiro
		for(int y = 0; y < 30; y++)
		{
			for(int z = 0; z < 30; z++)
			{
				if(quadrado[y][z] == 1)
				{
					printf("0");
				}else if(quadrado[y][z] == 0)
				{
					printf(" ");
				}
				
			}
			printf("\n");
		}
	}
	
	return 0;
}
