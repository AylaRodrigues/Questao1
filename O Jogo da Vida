#include <stdio.h>
#include <stdlib.h>

int main () {
	
	setlocale (LC_ALL,"");
	char start;

	printf("Para iniciação randômica digite 'r', para selecionar as células digite 'c'\n");
	scanf("%s", &start);

	if (start== 'r')
	{
		int espacos;
		int rd;
		printf("Quantas células vivas?\n");
		scanf("%d", &espacos);
		rd = espacos * 2;

		for (int rd = 0; rd < rd-1; rd++)
		{
		    printf("%d\n", rand() % 10);
		}
		
		else
		
	int quadrado[30][30];
	
	for(int i = 0; i < 30; i++)
	{
		for(int j = 0; j< 30; j++)
		{
			quadrado[i][j] = 0;
		}
	}
	
	//opção de escolha
	int x,y; //linha e coluna
	while(x != -1 && y != -1)
	{
		scanf("%d %d",&x,&y);
		quadrado[x][y] = 1;
	}
	
	//printar o tabuleiro
	for(int y = 0; y < 30; y++)
	{
		for(int z = 0; z < 30; z++)
		{
			if(quadrado[y][z] == 1)
			{
				printf("0");
			}else if(quadrado[y][z] == 0)
			{
				printf(" ");
			}
				
		}
		printf("\n");
	}
	
	return 0;
}
