//Garotes de Programa- Ayla Rodrigues de Moura, Douglas Mareli, João Vitor Spala, Sofia Kitaeva - Questão 1

#include <stdio.h>
#include <stdlib.h>
#include <Windows.h>
#include <locale.h>
#define DIM 32
int m, n;

void copiar(int copia[DIM][DIM], int quadrado[DIM][DIM])
{
    int linha,coluna;

    for(linha = 0 ; linha < DIM ; linha++)
        for(coluna = 0 ; coluna < DIM ; coluna++)
            copia[linha][coluna] = quadrado[linha][coluna];
}

void printar(int quadrado[DIM][DIM])
{
	int linha,coluna;
	for(int linha = 1; linha < 31; linha++)
	{
		for(int coluna = 1; coluna < 31; coluna++)
		{
			if(quadrado[linha][coluna] == 1)
			{
				printf("0");
			}
			else
			{
				printf(" ");
			}			
		}
		printf("\n");
	}	
}

int main()
{
	setlocale (LC_ALL, "");
	
	char start;
	int geracoes, quadrado[32][32],copia[32][32];
	
	int x,y; //linha e coluna
	
	printf("Para inicialização randomica digite 'r', para selecionar as célular digite 'c'\n");
	scanf("%c", &start);
	
	printf("Quantas gerações você quer ver?\n");
	scanf("%d", &geracoes);
	
	//deixando todos os espaços neutros
	for(int i = 0; i < 32; i++)
	{
		for(int j = 0; j< 32; j++)
		{
			quadrado[i][j] = 0;
		}
	}
		
	//opção randomica
	if (start== 'r')
	{	
		int espacos;
		printf("Quantas células vivas?\n");
		scanf("%d", &espacos);
		
		for(int i = 0; i <= espacos; i++)
		{
			x= rand() %30;
			y= rand() %30;
			quadrado[x][y]=1;
		}
	}
	else 
	{
		//opção de escolha
		printf("Digite as cordenadas das células vivas\n");
		while(x != -1 && y != -1)
		{
			scanf("%d %d",&x,&y);
			quadrado[x][y] = 1;
		}
	}

	//inicio do jogo
	for(int i=0; i<=geracoes; i++)
	{
		system("cls");
		int ct=0;
		printar(quadrado);
		printf("\n");
		copiar(copia, quadrado);
		for(int m=1; m<31; m++)
		{
			for(int n=1; n<31; n++)
			{	
				//calcular se a célula viva morre
				if(copia[m][n]==1)
				{
					if(copia[m][n-1]==1)
						ct++;
					if(copia[m+1][n-1]==1)
						ct++;
					if(copia[m-1][n-1]==1)
						ct++;
					if(copia[m+1][n]==1)
						ct++;
					if(copia[m-1][n]==1)
						ct++;
					if(copia[m][n+1]==1)
						ct++;
					if(copia[m-1][n+1]==1)
						ct++;
					if(copia[m+1][n+1]==1)
						ct++;
					if(ct<2 || ct>3)
						quadrado[m][n]=0;
				}
				//calcular se a célula morta nasce
				else 
				{
					if(copia[m][n-1]==1)
						ct++;
					if(copia[m+1][n-1]==1)
						ct++;
					if(copia[m-1][n-1]==1)
						ct++;
					if(copia[m+1][n]==1)
						ct++;
					if(copia[m-1][n]==1)
						ct++;
					if(copia[m][n+1]==1)
						ct++;
					if(copia[m-1][n+1]==1)
						ct++;
					if(copia[m+1][n+1]==1)
						ct++;
					if(ct==3)
						quadrado[m][n]=1;
				}
				ct=0;
			}	
		}
		Sleep(250);
	}
	
	return 0;
}
