#include <stdio.h>
#include <stdlib.h>
#include <Windows.h>
#include <locale.h>
#define DIM 30
void copiar(int copia[DIM][DIM], int quadrado[DIM][DIM])
{
    int linha,coluna;

    for(linha = 0 ; linha < DIM ; linha++)
        for(coluna = 0 ; coluna < DIM ; coluna++)
            copia[linha][coluna] = quadrado[linha][coluna];
}
void printar(int quadrado[DIM][DIM])
{
	int linha,coluna;
	for(int linha = 0; linha < 30; linha++)
	{
		for(int coluna = 0; coluna < 30; coluna++)
		{
			if(quadrado[linha][coluna] == 1)
			{
				printf("0");
			}else if(quadrado[linha][coluna] == 0)
			{
				printf(" ");
			}			
		}
		printf("\n");
	}	
}

int main()
{
	setlocale (LC_ALL, "");
	
	char start;
	int geracoes, quadrado[DIM][DIM],copia[DIM][DIM],ct=0;
	
	int x,y; //linha e coluna
	
	printf("Para inicialização randomica digite 'r', para selecionar as célular digite 'c'\n");
	scanf("%c", &start);
	
	printf("Quantas gerações você quer ver?\n");
	scanf("%d", &geracoes);
	
	//deixando todos os espaços neutros
	for(int i = 0; i < 30; i++)
		{
			for(int j = 0; j< 30; j++)
			{
				quadrado[i][j] = 0;
			}
		}
		
	//opção randomica
	if (start== 'r')
	{	
		int espacos;
		printf("Quantas células vivas?\n");
		scanf("%d", &espacos);
		
		for(int i = 0; i <= espacos; i++)
		{
			x= rand() %29;
			y= rand() %29;
			quadrado[x][y]=1;
		}
		
	}
	else 
	{
		//opção de escolha
		printf("Digite as cordenadas das células vivas\n");
		while(x != -1 && y != -1)
		{
			scanf("%d %d",&x,&y);
			quadrado[x-1][y-1] = 1;
		}
	}
	//printar o tabuleiro
	printar (quadrado);
	//inicio do jogo
		for(int i=0; i<geracoes; i++)
	{
		ct=0;
		Sleep(1000);
		system("cls");
		copiar (copia, quadrado);
		printar (quadrado);
		Sleep(1000);
		for(int x=0; x<30; x++)
		{
			for(int y=0; y<30; y++)
			{
				//calcular se a célula viva morre
				if(copia[x][y]==1)
				{
					if(copia[x][y-1]==1)
						ct++;
					if(copia[x+1][y-1]==1)
						ct++;
					if(copia[x-1][y-1]==1)
						ct++;
					if(copia[x+1][y]==1)
						ct++;
					if(copia[x-1][y]==1)
						ct++;
					if(copia[x][y+1]==1)
						ct++;
					if(copia[x-1][y+1]==1)
						ct++;
					if(copia[x+1][y+1]==1)
						ct++;
					if(ct<2 || ct>3)
						quadrado[x][y]=0;
				}
				//calcular se a célula morta nasce
				else
				{
					if(copia[x+1][y+1]) ct++;
					if(copia[x][y+1]) ct++;
					if(copia[x-1][y+1]) ct++;
					if(copia[x-1][y]) ct++;
					if(copia[x-1][y-1]) ct++;
					if(copia[x][y-1]) ct++;
					if(copia[x+1][y-1]) ct++;
					if(ct==3) quadrado[x][y]=1;
				}
			}	
		}

}
	return 0;
}
